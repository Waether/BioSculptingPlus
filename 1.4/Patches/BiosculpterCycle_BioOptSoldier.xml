<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Ideology</li>
    </mods>

    <!-- Check for Settings -->
    <match Class="BioSculptingPlus.PatchOperationCheckSettings">
      <settings>
        <li>ShowBioOptSoldier</li>
      </settings>
      <match Class="PatchOperationSequence">
        <operations>

          <!-- Vanilla -->
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="BiosculpterPod"]/comps</xpath>
            <value>
              <li Class="BioSculptingPlus.CompProperties_BiosculpterPod_BioOptSoldierCycle">
                <key>biooptsoldierkey</key>
                <label>biooptsoldier label</label>
                <description>biooptsoldier desc.</description>
                <iconPath>UI/Gizmos/BiosculpterCycleAgeIncrease</iconPath>
                <durationDays>8</durationDays>
                <operatingColor>(1.000,0.918,0.000)</operatingColor>
              </li>
            </value>
          </li>
          <!-- Vanilla -->

        </operations>
      </match>
    </match>
    <!-- Check for Settings -->

  </Operation>
</Patch>
